{
    "$schema-template": "2.0.0",
    "modulesContent": {
        "$edgeAgent": {
            "properties.desired": {
                "schemaVersion": "1.1",
                "runtime": {
                    "type": "docker",
                    "settings": {
                        "minDockerVersion": "v1.25",
                        "registryCredentials": {
                            "vmregistryakke": {
                                "username": "vmregistryakke",
                                "password": "v1HH2yTQNwXkqC6lOE98yilD3y3TkTEYjyyi73Wr8i+ACRAGBgrT",
                                "address": "vmregistryakke.azurecr.io"
                            }
                        }
                    }
                },
                "systemModules": {
                    "edgeAgent": {
                        "type": "docker",
                        "settings": {
                            "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
                            "createOptions": {}
                        }
                    },
                    "edgeHub": {
                        "type": "docker",
                        "status": "running",
                        "restartPolicy": "always",
                        "settings": {
                            "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
                            "createOptions": {
                                "HostConfig": {
                                    "PortBindings": {
                                        "5671/tcp": [
                                            {
                                                "HostPort": "5671"
                                            }
                                        ],
                                        "8883/tcp": [
                                            {
                                                "HostPort": "8883"
                                            }
                                        ],
                                        "443/tcp": [
                                            {
                                                "HostPort": "443"
                                            }
                                        ]
                                    },
                                    "loggingOptions": {
                                        "log-driver": "json-file",
                                        "log-level": "info"
                                    }
                                }
                            }
                        }
                    }
                },
                "modules": {
                    "ModbusClientModule": {
                        "version": "1.0",
                        "type": "docker",
                        "status": "running",
                        "restartPolicy": "always",
                        "settings": {
                            "image": "vmregistryakke.azurecr.io/modbusclientmodule:0.0.1-amd64",
                            "createOptions": {}
                        },
                        "env": {
                            "Log_Level": {
                                "value": "info"
                            }
                        }
                    },
                    "AnalyticModule": {
                        "version": "1.0",
                        "type": "docker",
                        "status": "running",
                        "restartPolicy": "always",
                        "settings": {
                            "image": "vmregistryakke.azurecr.io/analyticmodule:0.0.1-amd64",
                            "createOptions": {}
                        },
                        "env": {
                            "Log_Level": {
                                "value": "info"
                            }
                        }
                    }
                }
            }
        },
        "$edgeHub": {
            "properties.desired": {
                "schemaVersion": "1.2",
                "routes": {
                    
                    "ModbusClientModuleToAnalyticModule": "FROM /messages/modules/ModbusClientModule/outputs/output1 INTO BrokeredEndpoint(\"/modules/AnalyticModule/inputs/input1\")",
                    "AnalyticModuleToIoTHub": "FROM /messages/modules/AnalyticModule/outputs/output1 INTO $upstream"
                },
                "storeAndForwardConfiguration": {
                    "timeToLiveSecs": 7200
                }
            }
        }
    }
}
